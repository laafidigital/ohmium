@using Ohmium.Utilities;
@using Ohmium.Models.EFModels;
<!DOCTYPE html>
<html lang="en">
<head>
    @*<meta charset="utf-8" name="keywords" content="alternative energy, ecology, energy business, green energy, heating, hydropower, nature energy, power saving, recycling, renewable energy, solar energy, Solar Panels, wing turbines" />*@
    <title>Ohmium</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/lib/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/dist/css/adminlte.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/lib/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lib/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <style type="text/css">
        table thead th {
            text-transform: uppercase;
        }
    </style>
</head>
@{
    User info = ViewContext.HttpContext.Session.Get<User>("User");
    string user = info == null ? null : info.Login;
    if (user == null)
    {
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        @{
            TempData["Title"] = "Login";
        }




        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">

                <li class="nav-link">
                    <span>Ohmium</span>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/lib/img/logo-min.png" class="brand-image" style="opacity: .8">
                <span class="brand-text font-weight-light">Ohmium RMCC</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        @*<img src="assets/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">*@
                    </div>
                    <div class="info">
                        <a href="#" class="d-block"></a>
                    </div>
                </div>


                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul>

                        <img src="~/lib/plugins/jquery-ui/images/h2e-power.jpg" title="Ohmium" alt="Ohmium" width="170" height="320" />


                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        }

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@TempData["PageTitle"]</h1>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">

                        <div class="card-body">


                            @RenderBody()

                        </div>
                        <!-- /.card-body -->

                </div>
                <!-- /.card -->

            </section>
            <!-- /.content -->
        </div>
        }
        else
            {
            <div class="card-body">


                @RenderBody()

            </div>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Login" asp-action="logout">Sign in</a>
                </li>
            } }
            <footer class="main-footer">
                <strong>Copyright &copy; 2014-2021 <a href="https://Ohmium.com">Ohmium International</a>.</strong>
                All rights reserved.
                <div class="float-right d-none d-sm-inline-block">
                    <b>Version</b> 3.2.0-rc
                </div>
            </footer>
    </div>

    <script src="~/lib/plugins/jquery/jquery.min.js"></script>
    Bootstrap
    <script src="~/lib/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    AdminLTE
    <script src="~/lib/dist/js/adminlte.js"></script>
    DataTables  & Plugins
    <script src="~/lib/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/jszip/jszip.min.js"></script>
    <script src="~/lib/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/lib/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            setTimeout(() => {
                $('#example1').DataTable({

                    dom: 'Bfrtip',

                    lengthChange: false,

                    autoWidth: false,

                    pageLength: 10,

                    buttons: [

                        'copy', 'csv', 'excel', 'pdf', 'print', 'colvis'

                    ]

                });
            }, 100)
        });
    </script>
</body>
                        }
                        else
                        {
                            IgnoreBody();
            <body>


                <ul class="navbar-nav">

                    <li class="nav-item">
    
        <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Login" asp-action="logout">Sign in</a>
    </li>
    </ul>

</body>        
    }
 }
</html>
