    <div class="col-md-12">
        <form asp-action="EditNew">
            <table class="table table-striped">
                <tr>
                    <td>

                      @* <select id="scriptId" name="scriptId" value="@ViewBag.scriptId" class="form-control" asp-items="ViewBag.scriptId">*@
