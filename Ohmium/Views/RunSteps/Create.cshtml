@model Ohmium.Models.EFModels.RunStep

@{
    ViewData["Title"] = "Create";
}
<style>
    /*   td {
        margin:0px,1px,0px,5px;
    }*/
</style>
<h1>Create</h1>

<h4>RunStep</h4>
<hr />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var url = '@Url.Action("GetRunStep")';
            $("#stkRunProfileID").change(function () {
                var id = $(this).val();
                $.getJSON(url, { rpid: id }, function (response) {
                    $("#stepNumber").val(response);
                    $("#rs").show();
                });
                });
            })
    </script>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tr>
                    <td colspan="2">
                        <label asp-for="stkRunProfileID" class="control-label"></label><br />
                        @*<select asp-for="stkRunProfileID" class="form-control" asp-items="ViewBag.stkRunProfileID" id="stkRunProfileID"><option value="Select">Select</option></select>*@
                        <input hidden asp-for="stkRunProfileID" value="@ViewData["prfID"]" />
                        <input disabled value="@ViewBag.stkRunProfileID" />
                    </td>
                    <td colspan="2">
                        <label asp-for="rstGID" class="control-label" title="Run Step Group"></label><br />
                        <select asp-for="rstGID" class="form-control" asp-items="ViewBag.rstGID"><option value="Select">Select</option></select>
                        <span asp-validation-for="rstGID" class="text-danger"></span>
                    </td>
                    <td colspan="2">
                        <label asp-for="testState" class="control-label"></label><br />
                        <select asp-for="testState" class="form-control" asp-items="ViewBag.testStates"><option value="Select">Select</option></select>
                        <span asp-validation-for="testState" class="text-danger"></span>
                    </td>

                    <td>
                        <div>
                            <label asp-for="stepNumber" class="control-label"></label>
                            <input asp-for="stepNumber" class="form-control" value="@TempData["stkRnPfID"]" />
                            <span asp-validation-for="stepNumber" class="text-danger"></span>
                        </div>
                    </td>
                    <td colspan="6">
                        <label asp-for="sCmd" class="control-label"></label><br />
                        Start <input type="radio" asp-for="sCmd" value="Start" />
                        Impedence <input type="radio" asp-for="sCmd" value="Impedence" />
                        Stop <input type="radio" asp-for="sCmd" value="Stop" />
                        <span asp-validation-for="sCmd" class="text-danger"></span>
                    </td>
                </tr>
                <tr>

                    <td>
                        <div class="form-group">
                            <label asp-for="duration" class="control-label"></label>
                            <input asp-for="duration" class="form-control" value="0" />
                            <span asp-validation-for="duration" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="cI" class="control-label"></label>
                            <input asp-for="cI" class="form-control" />
                            <span asp-validation-for="cI" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="cV" class="control-label"></label>
                            <input asp-for="cV" class="form-control" />
                            <span asp-validation-for="cV" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="wP" class="control-label"></label>
                            <input asp-for="wP" class="form-control" />
                            <span asp-validation-for="wP" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="hP" class="control-label"></label>
                            <input asp-for="hP" class="form-control" />
                            <span asp-validation-for="hP" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="wFt" class="control-label"></label>
                            <input asp-for="wFt" class="form-control" />
                            <span asp-validation-for="wFt" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="wTt" class="control-label"></label>
                            <input asp-for="wTt" class="form-control" />
                            <span asp-validation-for="wTt" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="cVt" class="control-label"></label>
                            <input asp-for="cVt" class="form-control" />
                            <span asp-validation-for="cVt" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="cVl" class="control-label"></label>
                            <input asp-for="cVl" class="form-control" />
                            <span asp-validation-for="cVl" class="text-danger"></span>
                        </div>
                    </td>
@*                    <td>
                        <div class="form-group">
                            <label asp-for="mnF" class="control-label"></label>
                            <input asp-for="mnF" class="form-control" />
