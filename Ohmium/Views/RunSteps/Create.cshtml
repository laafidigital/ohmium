                            <span asp-validation-for="imA" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="imF" class="control-label"></label>
                            <input asp-for="imF" class="form-control" />
                            <span asp-validation-for="imF" class="text-danger"></span>
                        </div>
                    </td>
<td></td>
                </tr>
            </table>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
                <a asp-controller="RunProfiles" asp-action="Index">Back To Profiles</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
